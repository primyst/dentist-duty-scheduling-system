generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------------------------
// Enums
// ---------------------------
enum Role {
  doctor
  nurse
  admin
}

enum ShiftStatus {
  assigned
  requested_swap
  approved
  rejected
}

// ---------------------------
// Models
// ---------------------------

model User {
  id            Int         @id @default(autoincrement())
  name          String
  role          Role
  department    Department? @relation(fields: [departmentId], references: [id])
  departmentId  Int?
  shifts        Shift[]
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Department {
  id        Int      @id @default(autoincrement())
  name      String
  shifts    Shift[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Shift {
  id           Int         @id @default(autoincrement())
  date         DateTime
  startTime    DateTime
  endTime      DateTime
  department   Department  @relation(fields: [departmentId], references: [id])
  departmentId Int
  user         User        @relation(fields: [userId], references: [id])
  userId       Int
  status       ShiftStatus
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}
